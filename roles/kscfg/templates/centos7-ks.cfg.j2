#version=RHEL7
# System authorization information
auth --enableshadow --passalgo=sha512

# Use CDROM installation media
cdrom
# Use graphical install
graphical
# Run the Setup Agent on first boot
firstboot --enable
ignoredisk --only-use={{item.kscfg_hdddev}}
# Keyboard layouts
keyboard --vckeymap=us --xlayouts='us'
# System language
lang ja_JP.UTF-8

# Network information
network  --hostname={{item.kscfg_hostname}} --bootproto=static --device={{item.kscfg_netdev}} --gateway={{item.kscfg_gateway}} --ip={{item.kscfg_ip}} --nameserver={{item.kscfg_nameserver}} --netmask={{item.kscfg_netmask}} --ipv6=auto --activate
# Root password
rootpw --plaintext {{item.kscfg_rootpw}}
# System timezone
timezone Asia/Tokyo --isUtc
# System bootloader configuration
bootloader --append=" crashkernel=auto" --location=mbr --boot-drive={{item.kscfg_hdddev}}
# Partition clearing information
clearpart --all --initlabel --drives={{item.kscfg_hdddev}}
# Disk partitioning information
part /boot --fstype="xfs" --ondisk={{item.kscfg_hdddev}} --size=500 --asprimary
part / --fstype="xfs" --ondisk={{item.kscfg_hdddev}} --size=1 --grow  --asprimary
part swap --fstype="swap" --ondisk={{item.kscfg_hdddev}} --size={{item.kscfg_memsize | int // 2}} --asprimary
part /dump --fstype=ext4 --ondisk={{item.kscfg_hdddev}}  --size={{(item.kscfg_memsize | int * 1.1) | int}} --asprimary

poweroff

%packages
@core
kexec-tools

%end

%addon com_redhat_kdump --enable --reserve-mb='auto'

%end
