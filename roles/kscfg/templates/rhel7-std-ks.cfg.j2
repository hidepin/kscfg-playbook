{{pkg}}
{% endfor %}

%end

%post
for IF_FILE in $(/usr/bin/grep -L "^NAME=" /etc/sysconfig/network-scripts/ifcfg-*)
do
    IF_NAME=$(/usr/bin/basename ${IF_FILE} | sed 's/ifcfg-//')
    IPV4_ADDRESSES=$(nmcli -t --fields ipv4.addresses con show ${IF_FILE} | sed 's/.*://')
    IPV4_GATEWAY=$(nmcli -t --fields ipv4.gateway con show ${IF_FILE} | sed 's/.*://')
    nmcli con del ${IF_FILE}
    nmcli con add type ethernet con-name ${IF_FILE} ifname ${IF_FILE} ip4 ${IPV4_ADDRESSES} gw4 ${IPV4_GATEWAY}
    nmcli con mod ${IF_FILE} ipv4.may-fail no
    nmcli con mod ${IF_FILE} ipv6.method ignore
done
{% if item.kscfg_uefi_firmware %}
sed -i 's/defaults,uid=0,gid=0,//' /etc/fstab
{% endif %}
virsh net-destroy default
virsh net-autostart default --disable
sed -i 's/USEFPRINTD=no/USEFPRINTD=yes/' /etc/sysconfig/authconfig
sed -i '/pam_env.so/a\auth        sufficient    pam_fprintd.so' /etc/pam.d/system-auth-ac
# Initial Setup Dsiable
###sed -i '/\[daemon\]/a\InitialSetupEnable=false' /etc/gdm/custom.conf
# Gnome Setup Dsiable
###sed -i '$a\X-GNOME-Autostart-enabled=false' /etc/xdg/autostart/gnome-initial-setup-first-login.desktop

%end

